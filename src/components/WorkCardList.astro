---
import { workExperience } from '../data/workExperience';

const baseCardClass = 'relative border-2 border-slate-400 rounded-lg px-8 py-6 lg:w-[45%]';
---

<div class="relative mx-auto my-20 flex max-w-3xl flex-col gap-12 lg:max-w-7xl lg:gap-20">
  <div class="absolute -left-8 hidden h-full border-2 border-white sm:block lg:left-[50%]"></div>
  {
    workExperience.map((exp, index) => (
      <div class={`${baseCardClass} ${(index + 1) % 2 ? 'self-start' : 'self-end'}`}>
        <h3 class="text-2xl font-medium sm:text-3xl">{exp.company}</h3>
        <small>{exp.timeWithDuration}</small>
        <p class="mt-3 text-base font-normal">{exp.shortDescription}</p>
        <ul>
          {exp.list.map((listItem) => (
            <p>{listItem}</p>
          ))}
        </ul>
      </div>
    ))
  }
</div>
