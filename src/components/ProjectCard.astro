---
import Button from './Button.astro';
import GithubMarkIcon from './icons/Github-mark-icon.astro';
interface Props {
  note: string;
  title: string;
  dayTime: string;
  repoLink: string;
  description: string;
}

const { title, description, note, repoLink, dayTime } = Astro.props;
---

<div
  class="flex max-w-lg flex-col justify-between rounded-lg border-2 border-slate-500 px-8 py-8 text-slate-700 shadow-lg drop-shadow-xl"
>
  <div>
    <h3 class="text-2xl font-medium text-slate-800">{title}</h3>
    <p class="mt-2 text-base">
      {description}
    </p>
  </div>
  <strong class="mb-2 mt-8 text-sm">PS: {note}</strong>
  <div class="flex items-center justify-between">
    <Button small target="_blank" href={repoLink} classname="text-slate-700">
      <GithubMarkIcon height={24} width={24} />
    </Button>
    <strong>{dayTime}</strong>
  </div>
</div>
